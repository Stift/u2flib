@model DemoU2FSite.Models.RegisterModel
@{
    ViewBag.Title = "Compelete Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section specialJS
{
    <script type="text/javascript">
    var request = {"challenge": "@Model.Challenge", "version": "@Model.Version", "appId": "@Model.AppId"};
    setTimeout(function () {
        $('#promptModal').modal('show');
        u2f.register([request], [],
            function (data) {
                var form = document.getElementById('registerForm');
                var reg = document.getElementById('TokenResponse');
                if (data.errorCode) {
                    alert("U2F failed with error: " + data.errorCode);
                    return;
                }

                $('#promptModal').modal('hide');
                reg.value = JSON.stringify(data);
                form.submit();
            });
    }, 1000);
    </script>

}
<h2>Complete Register</h2>
<h3>Please plug in your device and touch the button.</h3>
@using (Html.BeginForm("CompleteRegister", "Home", FormMethod.Post, new { id = "registerForm" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Registration Form</legend>
        <div class=".col-xs-12 .col-sm-6 .col-lg-8">
            <div class=".col-xs-6 .col-sm-4">
                @Html.LabelFor(m => m.UserName)
            </div>
            <div class=".col-xs-6 .col-sm-4">
                <input id="TokenResponse" data-bind="value: pageViewModel.UserName" readonly="true" />
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>
        <div class=".col-xs-12 .col-sm-6 .col-lg-8">
            <div class=".col-xs-6 .col-sm-4">
                @Html.LabelFor(m => m.TokenResponse)

            </div>
            <div class=".col-xs-6 .col-sm-4">
                <input id="TokenResponse" data-bind="value: pageViewModel.TokenResponse" />
            </div>
        </div>

@*        @Html.Hidden("TokenResponse", Model.TokenResponse)*@
@*        @Html.Hidden("AppId", Model.AppId)*@
@*        @Html.Hidden("Challenge", Model.Challenge)*@
@*        @Html.Hidden("Version", Model.Version)*@
        <br />
        <input type="submit" value="Complete Register" />
    </fieldset>
}

  <!-- Modal -->
<div id="promptModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-header">
        <h3 id="myModalLabel">Performing U2F action</h3>
    </div>
    <div class="modal-body">
        <p>Please touch the flashing U2F device now.</p>
        <p>You may be prompted to allow the site permission to access your security keys. After granting permission, the device will start to blink.</p>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default" href="javascript:history.back()">Abort</a>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/knockout")
<script type="text/javascript">
    $(document).ready(function () {

        var pageViewModel  = {
            UserName: ko.observable("@Model.UserName"),
            DeviceTokenRepsonse: ko.observable("@Model.TokenResponse")
        };

        ko.applyBindings(pageViewModel);

        if (window.u2f === undefined) {
            $("TokenResponse").show();
        }
    });
</script>
}
